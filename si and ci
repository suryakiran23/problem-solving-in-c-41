
#include <stdio.h>
#include <math.h>

int main()
{
    float p, t, r, si, ci;
    printf("enter principal amount (p) :");
    scanf("%f", &p);
    printf("enter time in year (t) :");
    scanf("%f", &t);
    printf("enter rate in percent (r) :");
    scanf("%f", &r);
    
    si=(p*t*r)/100;
    ci=p*(pow(1+r/100, t)-1);
    
    printf("simple interest = %f\n", si);
    printf("compund interest = %f", ci);
   
    
    return 0;
    
    
}
    

